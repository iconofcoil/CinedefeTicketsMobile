<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<TextView
		android:text="Cinedefe Tickets"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:minWidth="25px"
		android:minHeight="25px"
		android:id="@+id/titleTextView"
		android:textSize="30dp"
		android:textAlignment="center"
		android:textStyle="bold"
		android:textColor="@android:color/white"
		android:background="@android:color/holo_blue_light"/>
	<TextView
		android:text=""
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/titleTextView"
		android:id="@+id/spacerTextView"
	    android:height="10dp"/>
	<TextView
		android:text="[CiudadNombre]"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/spacerTextView"
		android:minWidth="25px"
		android:minHeight="25px"
		android:id="@+id/ciudadTitleTextView"
		android:textSize="22dp"
		android:textAlignment="center"
		android:textStyle="normal"
		android:textColor="@android:color/white"
		android:background="@android:color/holo_blue_light"/>
	<TextView
		android:text=""
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/titleTextView"
		android:id="@+id/spacer2TextView"
	    android:height="2dp"/>
	<TextView
		android:text="Selecciona la Sucursal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/ciudadTitleTextView"
		android:minWidth="25px"
		android:minHeight="25px"
		android:id="@+id/selectSucursalTitleTextView"
		android:textSize="22dp"
		android:textAlignment="center"
		android:textStyle="normal"
		android:textColor="@android:color/white"
		android:background="@android:color/holo_blue_light"/>
	<ListView
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/selectSucursalTitleTextView"
		android:id="@+id/sucursalesListView" />

</LinearLayout>
